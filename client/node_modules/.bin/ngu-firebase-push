#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node_modules/.bin/ts-node" ]; then
  "$basedir/node_modules/.bin/ts-node"  "$basedir/../ng-pwa-tools/bin/ngu-firebase-push.js" "$@"
  ret=$?
else 
  node_modules/.bin/ts-node  "$basedir/../ng-pwa-tools/bin/ngu-firebase-push.js" "$@"
  ret=$?
fi
exit $ret
